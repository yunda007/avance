<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="avance.Paginas.Persona"
             >

  <ScrollView>
    <StackLayout>
      <Label Text="Personas" Font="25" TextColor="Black" HorizontalOptions="Center"></Label>
      <Entry x:Name="txtnombre" Placeholder="Nombre" Text="{Binding Nombre , Mode=TwoWay}"></Entry>
      <Entry x:Name="txtapellido" Placeholder="Apellido" Text="{Binding Apellido, Mode=TwoWay}"></Entry>
      <Entry x:Name="txtcorreo" Placeholder="Correo" Text="{Binding Correo, Mode=TwoWay}"></Entry>
      <Entry x:Name="txtpais" Placeholder="Pais" Text="{Binding Pais, Mode=TwoWay}"></Entry>
      <Entry x:Name="txtciudad" Placeholder="Ciudad" Text="{Binding Ciudad, Mode=TwoWay}"></Entry>
      <DatePicker x:Name="dtfecha" Date="{Binding Fecha, Mode=TwoWay}" ></DatePicker>
      <Button x:Name="btnguardar" Text="Guardar" BackgroundColor="Purple" Command="{Binding Guardar}"></Button>
      <Button x:Name="btnnuevo" Text="Nuevo" BackgroundColor="Blue" Command="{Binding Nuevo}"></Button>
      <Button x:Name="btnver" Text="Ver" BackgroundColor="Red"></Button>
    </StackLayout>
    
  
    
    
  </ScrollView>
  
  
</ContentPage>